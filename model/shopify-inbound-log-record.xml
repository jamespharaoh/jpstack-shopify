<record
	name="shopify-inbound-log"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- details -->

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<reference-field
			name="account"
			type="shopify-account"
			nullable="yes"/>

		<string-field
			name="remote-ip"/>

		<yes-no-field
			name="success"/>

		<string-field
			name="log"/>

		<string-field
			name="request"
			nullable="yes"/>

		<string-field
			name="response"
			nullable="yes"/>

	</fields>

</record>