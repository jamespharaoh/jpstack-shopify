<record
	name="shopifyCustomCollection"
	type="major">

	<dao-interfaces>

		<interface
			package="wbs.integrations.shopify.model"
			name="ShopifyDaoMethods">

			<parameter value="wbs.integrations.shopify.model.ShopifyCustomCollectionRec"/>

		</interface>

	</dao-interfaces>

	<object-helper-interfaces>

		<interface
			package="wbs.integrations.shopify.model"
			name="ShopifyObjectHelper">

			<parameter value="wbs.integrations.shopify.model.ShopifyCustomCollectionRec"/>

		</interface>

	</object-helper-interfaces>

	<record-interfaces>

		<interface
			package="wbs.integrations.shopify.model"
			name="ShopifyRecord">

			<parameter value="wbs.integrations.shopify.model.ShopifyCustomCollectionRec"/>

		</interface>

	</record-interfaces>

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="account"
			type="shopifyAccount"/>

		<identity-integer-field
			name="shopifyId"/>

		<!-- details -->

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="bodyHtml"
			nullable="yes"/>

		<string-field
			name="handle"
			nullable="yes"/>

		<timestamp-field
			name="imageCreatedAt"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="imageHeight"
			nullable="yes"/>

		<string-field
			name="imageSrc"
			nullable="yes"/>

		<integer-field
			name="imageWidth"
			nullable="yes"/>

		<timestamp-field
			name="publishedAt"
			column-type="postgresql"
			nullable="yes"/>

		<string-field
			name="publishedScope"
			nullable="yes"/>

		<string-field
			name="sortOrder"
			nullable="yes"/>

		<string-field
			name="templateSuffix"
			nullable="yes"/>

		<string-field
			name="title"
			nullable="yes"/>

		<timestamp-field
			name="updatedAt"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<!-- TODO metafields -->
	<!-- TODO products -->

	<shopify-synchronisation>

		<scalar-fields>

			<field name="body-html"/>
			<field name="handle"/>
			<!-- TODO image -->
			<field name="published-at"/>
			<field name="published-scope"/>
			<field name="sort-order"/>
			<field name="template-suffix"/>
			<field name="title"/>
			<field name="updated-at"/>

		</scalar-fields>

		<collection-fields>

			<!-- TODO products -->

		</collection-fields>

	</shopify-synchronisation>

</record>