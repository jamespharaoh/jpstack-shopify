<record
	name="shopify-outbound-log"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- details -->

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<reference-field
			name="account"
			type="shopify-account"/>

		<string-field
			name="method"/>

		<string-field
			name="path"/>

		<yes-no-field
			name="success"/>

		<string-field
			name="log"/>

		<string-field
			name="request"/>

		<string-field
			name="response"/>

	</fields>

</record>