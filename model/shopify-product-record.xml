<record
	name="shopifyProduct"
	type="common">

	<dao-interfaces>

		<interface
			package="wbs.integrations.shopify.model"
			name="ShopifyDaoMethods">

			<parameter value="wbs.integrations.shopify.model.ShopifyProductRec"/>

		</interface>

	</dao-interfaces>

	<object-helper-interfaces>

		<interface
			package="wbs.integrations.shopify.model"
			name="ShopifyObjectHelper">

			<parameter value="wbs.integrations.shopify.model.ShopifyProductRec"/>

		</interface>

	</object-helper-interfaces>

	<record-interfaces>

		<interface
			package="wbs.integrations.shopify.model"
			name="ShopifyRecord">

			<parameter value="wbs.integrations.shopify.model.ShopifyProductRec"/>

		</interface>

	</record-interfaces>

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="account"
			type="shopifyAccount"/>

		<identity-integer-field
			name="shopifyId"/>

		<!-- details -->

		<deleted-field/>

		<!-- data -->

		<string-field
			name="bodyHtml"
			nullable="yes"/>

		<timestamp-field
			name="createdAt"
			column-type="postgresql"
			nullable="yes"/>

		<string-field
			name="handle"
			nullable="yes"/>

		<string-field
			name="productType"
			nullable="yes"/>

		<timestamp-field
			name="publishedAt"
			column-type="postgresql"
			nullable="yes"/>

		<string-field
			name="publishedScope"
			nullable="yes"/>

		<string-field
			name="templateSuffix"
			nullable="yes"/>

		<string-field
			name="title"
			nullable="yes"/>

		<string-field
			name="metafieldsGlobalTitleTag"
			nullable="yes"/>

		<string-field
			name="metafieldsGlobalDescriptionTag"
			nullable="yes"/>

		<string-field
			name="tags"
			nullable="yes"/>

		<timestamp-field
			name="updatedAt"
			column-type="postgresql"
			nullable="yes"/>

		<string-field
			name="vendor"
			nullable="yes"/>

	</fields>

	<!-- TODO images -->
	<!-- TODO options -->
	<!-- TODO variants -->

	<shopify-synchronisation>

		<scalar-fields>

			<field name="body-html"/>
			<field name="created-at"/>
			<field name="handle"/>
			<field name="metafields-global-title-tag"/>
			<field name="metafields-global-description-tag"/>
			<field name="product-type"/>
			<field name="published-at"/>
			<field name="published-scope"/>
			<field name="template-suffix"/>
			<field name="title"/>
			<field name="updated-at"/>
			<field name="vendor"/>

		</scalar-fields>

		<collection-fields>

			<!-- TODO images -->
			<!-- TODO options -->
			<!-- TODO variants -->

		</collection-fields>

	</shopify-synchronisation>

</record>