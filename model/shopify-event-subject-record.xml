<record
	name="shopifyEventSubject"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="account"
			type="shopifyAccount"/>

		<identity-string-field
			name="subjectType"/>

		<identity-integer-field
			name="subjectId"/>

		<!-- state -->

		<yes-no-field
			name="pending"/>

		<integer-field
			name="lastEventId"/>

		<string-field
			name="lastEventVerb"/>

	</fields>

	<background-processes>

		<background-process
			object-type="shopify-event-subject"
			name="Process"
			description="Process events received from Shopify"
			frequency="5 seconds"/>

	</background-processes>

</record>