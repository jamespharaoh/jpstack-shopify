<record
	name="shopifyEvent"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="account"
			type="shopifyAccount"/>

		<identity-enum-field
			name="subjectType"
			type="shopifyEventSubjectType"/>

		<identity-integer-field
			name="subjectId"/>

		<!-- state -->

		<yes-no-field
			name="pending"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

	</fields>

	<background-processes>

		<background-process
			object-type="shopify-event"
			name="Process"
			description="Process shopify events"
			frequency="5 seconds"/>

	</background-processes>

</record>