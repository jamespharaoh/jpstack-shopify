<record
	name="shopifyEvent"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="account"
			type="shopifyAccount"/>

		<identity-integer-field
			name="shopifyId"/>

		<!-- state -->

		<yes-no-field
			name="pending"/>

		<!-- data -->

		<string-field
			name="body"
			nullable="yes"/>

		<timestamp-field
			name="createdAt"
			column-type="postgresql"
			nullable="yes"/>

		<string-field
			name="description"
			nullable="yes"/>

		<string-field
			name="path"
			nullable="yes"/>

		<string-field
			name="message"
			nullable="yes"/>

		<integer-field
			name="subjectId"
			nullable="yes"/>

		<string-field
			name="subjectType"
			nullable="yes"/>

		<string-field
			name="verb"
			nullable="yes"/>

	</fields>

	<!-- TODO arguments -->

	<shopify-synchronisation>

		<scalar-fields>

			<field name="body"/>
			<field name="created-at"/>
			<field name="description"/>
			<field name="path"/>
			<field name="message"/>
			<field name="subject-id"/>
			<field name="subject-type"/>
			<field name="verb"/>

		</scalar-fields>

		<collection-fields>

			<!-- TODO arguments -->

		</collection-fields>

	</shopify-synchronisation>

</record>